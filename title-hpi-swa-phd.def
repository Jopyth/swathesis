\providecommand{\hpiswacommittee}%
  {\begingroup%
  \RaggedRight
  \small
  \noindent
  \begingroup%
  \ifcsvoid{@referee}%
    % advisor only
    {\def\\{ \tabularnewline & }%
    \edef\tempa{\@advisor}%
    \begin{tabular}{@{}l@{\hspace*{1ex}}l@{}}
      \advisorname: & \tempa
    \end{tabular}}
    % advisor + referees
    {\def\\{ \tabularnewline & }%
    \def\and{ \tabularnewline \noexpand\smalllinespace & }%
    \edef\tempa{\@advisor}%
    \edef\tempb{\@referee}%
    \def\smalllinespace{\addlinespace[4pt]}%
    \begin{tabular}{@{}l@{\hspace*{1ex}}l@{}}
      \advisorname: & \tempa \\\addlinespace[8pt]
      \refereename: & \tempb
    \end{tabular}}
  \endgroup
  \par\smallskip\noindent
  \ifcsvoid{@handindate}%
    {} % no hand in, no defense
    {\ifcsvoid{@defensedate}%
      % hand in only
      {\begin{tabular}{@{}l@{\hspace*{1ex}}l@{}}
        \handindatename: & \hpiswaprintdate{\@handindate}
      \end{tabular}}%
      % hand in + defense
      {\begin{tabular}{@{}l@{\hspace*{1ex}}l@{}}
        \handindatename: & \hpiswaprintdate{\@handindate}\\
        \defensedatename:& \hpiswaprintdate{\@defensedate}
      \end{tabular}}}
  \par
  \vspace*{4\baselineskip}%
  \endgroup}%

